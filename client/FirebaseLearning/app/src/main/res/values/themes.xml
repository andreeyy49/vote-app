<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Theme.FirebaseLearning" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основной цвет -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Вторичный цвет -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Отключение стандартного ActionBar и поддержка кастомного Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Стиль для текста в Toolbar -->
    <style name="TextAppearance.ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textColorDark</item> <!-- Системный цвет -->
    </style>

    <!-- Стиль для иконки в Toolbar -->
    <style name="Widget.ToolbarButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/iconColorDark</item> <!-- Системный цвет -->
    </style>

</resources>