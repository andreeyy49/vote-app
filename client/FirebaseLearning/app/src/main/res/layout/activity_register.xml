<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.RegisterActivity">

    <View
        android:id="@+id/center"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="имя пользовавтеля"
        android:id="@+id/user_name_register"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/email_register"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/email_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="почта"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/password1_register"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="пароль"
        android:layout_centerHorizontal="true"
        android:id="@+id/password1_register"
        android:layout_below="@id/center"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="повторите пароль"
        android:layout_centerHorizontal="true"
        android:id="@+id/password2_register"
        android:layout_below="@id/password1_register"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password2_register"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_register"
        app:cornerRadius="15dp"/>

</RelativeLayout>